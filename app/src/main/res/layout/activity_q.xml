<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="1. 扫码连接"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:text="点击扫码"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/q_button_scan"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        app:layout_constraintLeft_toLeftOf="@+id/textView7" />

    <TextView
        android:text="BLE状态：连接断开"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/q_ble_state"
        app:layout_constraintLeft_toLeftOf="@+id/q_button_scan"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/q_button_scan" />

    <TextView
        android:text="2. 测试负载"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView11"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/q_ble_state"
        app:layout_constraintLeft_toLeftOf="@+id/q_ble_state" />

    <Button
        android:text="点击获取"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/q_button_get_device_current"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/et_deviation"
        app:layout_constraintLeft_toLeftOf="@+id/et_deviation" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:hint="修改参考电流，默认0.45A, 请输入0以上的数字"
        android:textSize="13sp"
        android:id="@+id/et_current"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView11"
        app:layout_constraintLeft_toLeftOf="@+id/textView11" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:hint="修改允许偏差，默认±15%，请输入0以上100以下的数字"
        android:textSize="13sp"
        android:id="@+id/et_deviation"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/et_current"
        app:layout_constraintLeft_toLeftOf="@+id/et_current" />

    <TextView
        android:text="3. 手动提交(设备连接不上时候使用)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView12"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/q_button_get_device_current"
        app:layout_constraintLeft_toLeftOf="@+id/q_button_get_device_current" />

    <Button
        android:text="点击提交"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_upload"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView12"
        app:layout_constraintLeft_toLeftOf="@+id/textView12" />
</android.support.constraint.ConstraintLayout>