<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="1. 点击扫描，选择设备进行连接"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:text="点击扫描"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/b_button_scanall"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintLeft_toLeftOf="@+id/textView3" />

    <TextView
        android:text="BLE状态：连接断开"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/b_ble_state"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/b_ble_rssi"
        app:layout_constraintLeft_toLeftOf="@+id/b_ble_rssi" />

    <TextView
        android:text="rssi(正常范围大于-40)：暂无"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/b_ble_rssi"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/b_ble_sn"
        app:layout_constraintLeft_toLeftOf="@+id/b_ble_sn" />

    <TextView
        android:text="2. 写入sn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView9"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/b_ble_state"
        app:layout_constraintLeft_toLeftOf="@+id/b_ble_state" />

    <Button
        android:text="点击写入magic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/b_button_magic"
        app:layout_constraintLeft_toLeftOf="@+id/textView9"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <TextView
        android:text="4. 生成二维码，上传"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView10"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/cb_open"
        app:layout_constraintLeft_toLeftOf="@+id/cb_open"
        android:layout_marginLeft="8dp" />

    <Button
        android:text="上传"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/b_button_upload"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView10"
        app:layout_constraintLeft_toLeftOf="@+id/textView10" />

    <CheckBox
        android:text="LED正常/LED灯正常闪烁"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cb_led"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        app:layout_constraintLeft_toLeftOf="@+id/textView8" />

    <CheckBox
        android:text="蜂鸣器正常/蜂鸣器发出Bi­声响"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cb_buzzer"
        app:layout_constraintLeft_toLeftOf="@+id/cb_led"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/cb_led" />

    <CheckBox
        android:text="RFID正常/蜂鸣器发出Bi­Bi­声响"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cb_rfid"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/cb_buzzer"
        app:layout_constraintLeft_toLeftOf="@+id/cb_buzzer" />

    <CheckBox
        android:text="电流传感器校准正常/蜂鸣器发出Bi­­Bi­Bi­声响"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cb_current_sensor"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/cb_rfid"
        app:layout_constraintLeft_toLeftOf="@+id/cb_rfid" />

    <TextView
        android:text="3. 其他测试项目"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView8"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/b_button_magic"
        app:layout_constraintLeft_toLeftOf="@+id/b_button_magic" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/iv_qrcode"
        android:layout_marginStart="56dp"
        app:layout_constraintLeft_toRightOf="@+id/textView10"
        app:layout_constraintTop_toTopOf="@+id/textView10" />

    <Button
        android:text="点击写入sn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/b_button_sn"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/b_button_magic"
        app:layout_constraintTop_toTopOf="@+id/b_button_magic" />

    <TextView
        android:id="@+id/b_ble_sn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SN:"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/b_button_scanall"
        app:layout_constraintLeft_toLeftOf="@+id/b_button_scanall" />

    <CheckBox
        android:id="@+id/cb_open"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="用户手按压开关，蜂鸣器长鸣，如果松开，停止长鸣"
        app:layout_constraintLeft_toLeftOf="@+id/cb_current_sensor"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/cb_current_sensor" />
</android.support.constraint.ConstraintLayout>